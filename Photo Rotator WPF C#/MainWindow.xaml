<Window x:Class="PhotoRotatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Photo Rotator" Height="450" Width="800">
    <Grid>
        <Image Name="PhotoImage" Stretch="Uniform" />
        <Button Name="NextButton" Content="Next" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="NextButton_Click"/>
        <ComboBox Name="TransitionComboBox" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Width="120"/>
        <Button Name="SettingsButton" Content="Settings" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Width="80" Height="30" Click="SettingsButton_Click"/>
    </Grid>
</Window>
